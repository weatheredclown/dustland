{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "legacy",
    "rootDir": "ts-src",
    "outDir": "build",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitOverride": true,
    "noEmitOnError": false,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "noUnusedParameters": true
  },
  "include": [
    "ts-src/**/*.ts",
    "ts-src/**/*.d.ts"
  ],
  "exclude": [
    "ts-src/components/**/*",
    "ts-src/data/**/*",
    "ts-src/modules/**/*",
    "ts-src/music-demo.ts",
    "ts-src/scripts/adventure-kit.ts",
    "ts-src/scripts/core/**/*",
    "ts-src/scripts/dialog-persist.ts",
    "ts-src/scripts/dustland-core.ts",
    "ts-src/scripts/dustland-engine.ts",
    "ts-src/scripts/dustland-nano.ts",
    "ts-src/scripts/fx-config.ts",
    "ts-src/scripts/multiplayer.ts",
    "ts-src/scripts/supporting/**/*",
    "ts-src/scripts/ui/skin-manager.ts",
    "ts-src/scripts/ui/trade.ts",
    "ts-src/scripts/workbench.ts"
  ]
}

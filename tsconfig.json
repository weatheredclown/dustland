{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "legacy",
    "rootDir": "ts-src",
    "outDir": "build",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "noUnusedLocals": true,
    "noEmitOnError": false,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"]
  },
  "include": [
    "ts-src/**/*.ts",
    "ts-src/**/*.d.ts"
  ]
}

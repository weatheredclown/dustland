{
  "name": "dustland",
  "version": "0.243.53",
  "description": "Wasteland-style browser RPG with a CRT vibe",
  "type": "module",
  "main": "scripts/dustland-core.js",
  "scripts": {
    "build": "npm run build:ts && npm run build:sync",
    "build:ts": "tsc --project tsconfig.json",
    "build:sync": "node build-tools/sync-ts-output.js",
    "build:watch": "tsc --project tsconfig.json --watch",
    "serve": "http-server -p 8080",
    "pretest": "npm run build",
    "test": "npm run lint && node --test",
    "lint": "eslint ts-src test --ext .ts,.js && yamllint .github/workflows/*.yml",
    "module:export": "node scripts/supporting/module-json.js export",
    "module:import": "node scripts/supporting/module-json.js import",
    "check:prod": "npm run build && node scripts/supporting/build-health.js && node scripts/supporting/presubmit.js && npm run lint && node --test"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "firebase": "^11.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^8.57.1",
    "eslint-plugin-jsdoc": "^61.3.0",
    "http-server": "^14.1.1",
    "jsdom": "^26.1.0",
    "puppeteer": "^24.30.0",
    "typescript": "~5.5.4",
    "yaml-lint": "^1.7.0"
  }
}

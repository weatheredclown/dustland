{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "overrides": [
    {
      "files": ["ts-src/**/*.ts"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
      },
      "plugins": ["@typescript-eslint", "jsdoc"],
      "extends": ["eslint:recommended"],
      "rules": {
        "no-undef": "off",
        "no-unused-vars": "off",
        "no-inner-declarations": "off",
        "no-cond-assign": "off",
        "semi": ["error", "always"],
        "jsdoc/check-types": "error",
        "@typescript-eslint/no-unused-vars": "off",
        "@typescript-eslint/no-explicit-any": "off"
      }
    },
    {
      "files": ["**/*.js"],
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
      },
      "plugins": ["jsdoc"],
      "extends": ["eslint:recommended"],
      "rules": {
        "no-undef": "off",
        "no-unused-vars": "off",
        "no-inner-declarations": "off",
        "no-cond-assign": "off",
        "semi": ["error", "always"],
        "jsdoc/check-types": "error"
      }
    }
  ]
}
